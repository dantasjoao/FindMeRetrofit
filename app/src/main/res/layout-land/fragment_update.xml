<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.update.UpdateFragment">

        <LinearLayout
            android:id="@+id/update_ll_main_layout_add_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="25dp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="-46dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/update_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:hint="@string/name_2"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/update_companyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="@string/email_2"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/update_companyPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="@string/phone_2"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/update_companyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="@string/address_2"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/update_companyCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="@string/category_2"
                    android:inputType="textPersonName" />


                <Button
                    android:id="@+id/update_add_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/update_2" />

        </LinearLayout>

</ScrollView>